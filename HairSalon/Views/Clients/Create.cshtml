@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h1>Add a new client</h1>

<div class="content">
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.StylistId)

      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)

      <input type="submit" value="Add new client" class="btn" />
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Back to stylist", "Details", "Stylists", new {id = Model.StylistId})</p>
</div>
