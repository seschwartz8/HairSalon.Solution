@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

<div class="content">
  @if (@Model.Count == 0)
  {
    <p>No stylists have been added yet!</p>
  } 

  @foreach (Stylist stylist in Model)
  {
    <h4>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h4>
  }
</div>


<div class="links">
  <p>@Html.ActionLink("Add new stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
