@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h1>Search for a stylist</h1>

<div class="content">
  @using (Html.BeginForm("SearchList", "Stylists"))
  {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
      <input type="submit" value="Find your stylist" class="btn"/>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Not finding your stylist? Show all stylists", "Index")</p>
</div>
